<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iwImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/rickandmorty" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/twTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/splash_title"
                android:textAlignment="center"
                android:fontFamily="@font/avenir_title"
                android:textSize="45sp"
                android:textColor="@color/rmagreen" />

            <TextView
                android:id="@+id/twGreeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Welcome!"
                android:fontFamily="@font/avenir_title"
                android:textSize="40sp"
                android:textColor="@color/rmapricelesscoral" />
        </LinearLayout>


        <Button
            android:id="@+id/btnNavigateHome"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/splash_button_text"
            android:textColor="@color/black"
            android:fontFamily="@font/avenir_title"
            android:backgroundTint="@color/rmagreen"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:layout_gravity="center"/>


    </LinearLayout>

</FrameLayout>